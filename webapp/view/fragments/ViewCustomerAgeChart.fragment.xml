<core:FragmentDefinition xmlns="sap.suite.ui.commons" 
    xmlns:m="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:viz.data="sap.viz.ui5.data" 
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core">
    <m:App>
        <m:Page id="fr1" title="{i18n>ChartTitle}" showHeader="true">
            <layout:Splitter width="100%" height="90%">
                <layout:contentAreas>
                    <ChartContainer id="chartContainer2" showFullScreen="true" showPersonalization="false" autoAdjustHeight="true" personalizationPress="attachPersonalizationPress" contentChange="attachContentChange">
                        <content>
                            <ChartContainerContent icon="sap-icon://bar-chart" title="Bar Chart">
                                <content>
                                    <viz:VizFrame visible="true" id="Chart-2" uiConfig="{applicationSet:'fiori'}" height="75%" width="100%" vizType="pie" vizProperties="{ title: {text : 'Customer Group Age', visible : true}}">
                                        <viz:dataset>
                                            <viz.data:FlattenedDataset data="{path:'oCustomerAgeModel>/pieData'}">
                                                <viz.data:dimensions>
                                                    <viz.data:DimensionDefinition name="Age" value="{oCustomerAgeModel>group}" />
                                                </viz.data:dimensions>
                                                <viz.data:measures>
                                                    <viz.data:MeasureDefinition name="Percentage" value="{oCustomerAgeModel>percentage}" />
                                                </viz.data:measures>
                                            </viz.data:FlattenedDataset>
                                        </viz:dataset>
                                        <viz:feeds>
                                            <viz.feeds:FeedItem uid="size" type="Measure" values="Percentage" />
                                            <viz.feeds:FeedItem uid="color" type="Dimension" values="Age" />
                                        </viz:feeds>
                                    </viz:VizFrame>
                                </content>
                            </ChartContainerContent>
                        </content>
                    </ChartContainer>
                </layout:contentAreas>
            </layout:Splitter>
        </m:Page>
    </m:App>
</core:FragmentDefinition>